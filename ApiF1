          name: canal
          description: canal
          required: false
          schema:
            type: string
        - in: query
          name: usuario
          description: usuario
          schema:
            type: string
        - in: query
          name: oficina
          description: oficina
          schema:
            type: string
        - in: query
          name: telefono
          description: telefono
          schema:
            type: integer
        - in: query
          name: cliente
          description: cliente
          schema:
            type: string
        - in: query
          name: folioContratacion
          description: folio de contratacion
          schema:
            type: integer
            format: int32
            minimum: 0
            maximum: 50
        - in: query
          name: accion
          description: accion
          schema:
            type: string
        - in: query
          name: producto
          description: producto
