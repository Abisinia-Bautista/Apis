            type: string
            example: APROVISIONA
            description: accion/movimiento
          producto:
            type: string
            example: F1001
            description: producto
          folioG3:
            type: string
            example: 000000060830888
            description: folio de g3
          codigoRespuesta:
            type: string
            example: '00'
            description: codigo que se recibio de la respuesta
          descripcionRespuesta:
            type: string
            example: EXITO
            description: descrpcion del codigo de respuesta
          datosAdicionales:
            type: object
            properties:
              virtual:
                type: string
                example: 2600000998
                description: numero de virtual
              hubTransID:
                type: string
                example: 16963036699903012266
                description: ID hub
            
